<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <TextView
            android:text="Подписка на 1 месяц"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="16dp" android:id="@+id/subscription_item_name" android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"/>
    <TextView
            android:text="Все функции приложения"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/subscription_item_func" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/subscription_item_name"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"/>
    <TextView
            android:text="99₽"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/subscription_item_rub" android:textStyle="bold"
            android:textSize="30sp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="13dp"
            app:layout_constraintEnd_toStartOf="@+id/imageView4" android:layout_marginEnd="16dp"
            android:layout_marginBottom="13dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/arrow_right"
            android:id="@+id/imageView4" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="2dp"/>
</android.support.constraint.ConstraintLayout>